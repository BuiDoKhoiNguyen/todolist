<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <!-- Add missing columns to existing tables -->
    <changeSet id="20240710000002-1" author="jhipster">
        <!-- Add category_id to task table -->
        <addColumn tableName="task">
            <column name="category_id" type="bigint"/>
        </addColumn>
        
        <!-- Add assigned_user_id to task table -->
        <addColumn tableName="task">
            <column name="assigned_user_id" type="bigint"/>
        </addColumn>
        
        <!-- Add user_id to comment table -->
        <addColumn tableName="comment">
            <column name="user_id" type="bigint"/>
        </addColumn>
        
        <!-- Fix subtask table - update status column from boolean to varchar -->
        <dropColumn tableName="subtask">
            <column name="is_completed"/>
        </dropColumn>
        <dropColumn tableName="subtask">
            <column name="description"/>
        </dropColumn>
        <addColumn tableName="subtask">
            <column name="status" type="varchar(255)" defaultValue="PENDING"/>
        </addColumn>
        
        <!-- Remove color column from tag table (not in entity) -->
        <dropColumn tableName="tag">
            <column name="color"/>
        </dropColumn>
    </changeSet>

    <!-- Create task_tag junction table for Many-to-Many relationship -->
    <changeSet id="20240710000002-2" author="jhipster">
        <createTable tableName="task_tag">
            <column name="task_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="tag_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <!-- Add composite primary key -->
        <addPrimaryKey columnNames="task_id, tag_id" tableName="task_tag"/>
    </changeSet>

    <!-- Add all missing foreign key constraints -->
    <changeSet id="20240710000002-3" author="jhipster">
        <!-- Task -> Category foreign key -->
        <addForeignKeyConstraint baseColumnNames="category_id"
                                 baseTableName="task"
                                 constraintName="fk_task_category_id"
                                 referencedColumnNames="id"
                                 referencedTableName="category"/>

        <!-- Task -> User (assigned user) foreign key -->
        <addForeignKeyConstraint baseColumnNames="assigned_user_id"
                                 baseTableName="task"
                                 constraintName="fk_task_assigned_user_id"
                                 referencedColumnNames="id"
                                 referencedTableName="jhi_user"/>

        <!-- Comment -> User foreign key -->
        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="comment"
                                 constraintName="fk_comment_user_id"
                                 referencedColumnNames="id"
                                 referencedTableName="jhi_user"/>

        <!-- Task-Tag junction table foreign keys -->
        <addForeignKeyConstraint baseColumnNames="task_id"
                                 baseTableName="task_tag"
                                 constraintName="fk_task_tag_task_id"
                                 referencedColumnNames="id"
                                 referencedTableName="task"/>

        <addForeignKeyConstraint baseColumnNames="tag_id"
                                 baseTableName="task_tag"
                                 constraintName="fk_task_tag_tag_id"
                                 referencedColumnNames="id"
                                 referencedTableName="tag"/>
    </changeSet>

</databaseChangeLog> 